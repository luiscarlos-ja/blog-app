{
  "name": "solvedex",
  "version": "1.0.0",
  "description": "assessment",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.ts",
    "start-ts": "ts-node src/server.ts",
    "start-dev": "concurrently --kill-others \"tsc -w\" \"nodemon dist/server.js\"",
    "build": "concurrently --kill-others \"tsc\" \"node dist/server.js\"",
    "test": "jest --detectOpenHandles --coverage --verbose",
    "test-ci": "jest --detectOpenHandles --coverage --verbose --ci",
    "test-watch": "jest --detectOpenHandles --watchAll --coverage --verbose",
    "sync-db": "typeorm-ts-node-commonjs schema:sync -d ./src/db/data-source.ts",
    "migration-generate": "typeorm-ts-node-commonjs migration:generate ./src/db/migrations -d ./src/db/data-source.ts",
    "migration": "typeorm-ts-node-commonjs migration:run -d ./src/db/data-source.ts"
  },
  "keywords": [
    "nodejs",
    "reactjs"
  ],
  "author": "Luis Carlos Juarez",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.11",
    "@types/node": "20.12.12",
    "@types/supertest": "6.0.2",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "ts-standard": "12.0.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@hapi/boom": "10.0.1",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "pg": "8.11.5",
    "rate-limiter-flexible": "5.0.3",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.20",
    "zod": "3.23.8"
  },
  "eslintConfig": {
    "extends": "./node_modules/ts-standard/eslintrc.json",
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "space-before-function-paren": "off",
      "@typescript-eslint/space-before-function-paren": "off",
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/no-misused-promises": [
        "error",
        {
          "checksVoidReturn": false
        }
      ]
    }
  }
}
